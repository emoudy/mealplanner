{
  "name": "@flavorbot/shared",
  "version": "1.0.0",
  "description": "Shared code between FlavorBot web and mobile applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas/index.js",
      "types": "./dist/schemas/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./api-client": {
      "import": "./dist/api-client/index.js",
      "types": "./dist/api-client/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "types": "./dist/hooks/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants/index.js",
      "types": "./dist/constants/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "peerDependencies": {
    "react": "^18.0.0",
    "@tanstack/react-query": "^5.0.0",
    "zod": "^3.20.0"
  },
  "dependencies": {
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "@paralleldrive/cuid2": "^2.2.2"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "@types/react": "^18.3.0"
  },
  "keywords": [
    "flavorbot",
    "recipe",
    "ai",
    "shared",
    "typescript"
  ],
  "author": "FlavorBot Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/flavorbot/flavorbot-shared.git"
  }
}