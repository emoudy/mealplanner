  "description": "FlavorBot Express.js API server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx src/index.ts",
    "build": "tsc && cp -r src/public dist/ 2>/dev/null || true",
