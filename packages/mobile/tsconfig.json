{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@flavorbot/shared": ["../shared/src"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../shared/src/**/*.ts",
    "../shared/src/**/*.tsx"
  ]
}